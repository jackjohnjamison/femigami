{% set navItems = [
  {
    title: "Our story",
    href: "/about"
  },
  {
    title: "Our workshops",
    href: "/whatweoffer"
  },
  {
    title: "What's on",
    href: "/events"
  },
  {
    title: "Gallery",
    href: "/gallery"
  },
  {
    title: "Partners",
    href: "/partnerspress"
  },
  {
    title: "Contact",
    href: "/contact"
  },
  {
    title: "News",
    href: "https://www.bn1magazine.co.uk/femigami-embrace-your-body-through-the-art-of-paperfolding/",
    external: true
  }
] %}

{% set socialItems = [
  {
    title: "facebook",
    href: "https://www.facebook.com/femigami",
    glyph: "F"
  },
  {
    title: "instagram",
    href: "http://www.instagram.com/femigami",
    glyph: "I"
  },
  {
    title: "tiktok",
    href: "https://www.tiktok.com/@femigami_?",
    glyph: "T"
  }
] %}

<nav class="main-nav" role="navigation">
  <ul class="main-nav__site-nav" aria-label="site navigation">
    <li class="main-nav__item main-nav__item--logo">
      <a href="/">
        <image src="/images/femigami-logo-sm.png" />
      </a>
    </li>

    {% for item in navItems %}
      <li class="main-nav__item--link">
        <a href="{{item.href}}"{% if item.external %} target="_blank"{% endif %}>
          {{item.title}}
        </a>
      </li>
    {% endfor %}
  </ul>

  <ul class="main-nav__social-nav" aria-label="social links">
    {% for item in socialItems %}
      <li class="main-nav__item main-nav__item--social-link">
        <a href="{{item.href}}" target="_blank">
          {{item.glyph}}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>